{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(mkdir *)",
      "Bash(touch *)",
      "Bash(ls *)",
      "Bash(tree *)",
      "Bash(cd *)",
      "Bash(cp *)",
      "Bash(cat *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(lsof*)",
      "Bash(nc *)",
      "Bash(which:*)",
      "Bash(npm ls:*)",
      "Bash(npm view:*)",
      "Bash(npm run lint*)",
      "Bash(npm run test*)",
      "Bash(pnpm lint*)",
      "Bash(pnpm test*)",
      "Bash(docker compose:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git pull:*)",
      "Bash(git branch:*)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(gh pr *)",
      "Bash(gh issue *)",
      "Bash(gh run view *)",
      "Bash(gh api **/comments *)",
      "Bash(go build:*)",
      "Bash(go env *)",
      "Bash(go test *)",
      "Bash(go tool *)",
      "Bash(go vet *)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:*.npmjs.com)",
      "WebFetch(domain:*.npmjs.org)",
      "WebFetch(domain:www.apollographql.com)",
      "WebSearch"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(git reset *)",
      "Bash(cat */.env*)",
      "Bash(cat *.env*)",
      "Bash(cat **/*secret*)",
      "Bash(cat **/*_key*)",
      "Bash(cat **/*.key)",
      "Bash(cat **/*id_rsa*)",
      "Bash(cat **/*token*)",
      "Bash(grep * .env*)",
      "Bash(grep * **/*secret*)",
      "Read(**/*token*)",
      "Read(**/*_key*)",
      "Read(**/*.key)",
      "Read(**/*id_rsa*)",
      "Read(**/*secret*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(rm -rf *)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(~/.config/*)",
      "Read(~/.*local*)"
    ],
    "ask": [
      "Bash(rm *)",
      "Bash(chmod *)",
      "Bash(wget *)",
      "Bash(curl *)",
      "Bash(git checkout *)",
      "Bash(git merge *)",
      "Bash(git push -f*)",
      "Bash(git rebase *)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  },
  "effortLevel": "medium"
}
